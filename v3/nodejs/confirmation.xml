<transactional_mailing>
  <name>{name}</name>
  <properties>
    <property key="Sender">default</property>
    <property key="Language">en</property>
    <property key="Encoding">iso-8859-1</property>
    <property key="Domain">{domain}</property>
    <property key="IncludeHeader">false</property>
  </properties>
  <recipient_fields>
    <field name="EMAIL"/>
    <field name="RCPT_TYPE_v3"/>
    <field name="LANGUAGE_v3"/>
  </recipient_fields>
  <subject> Emarsys TXM API Test (##subject##) </subject>
  <html>
    &lt;html&gt;
      &lt;head&gt;
        &lt;title&gt;$$RCPT_DOMAIN$$&lt;/title&gt;
        &lt;meta http-equiv="Content-Type" content="text/html; charset=UTF-8"&gt;
      &lt;/head&gt;

      &lt;body&gt;

        ##HEADER##

        &lt;p&gt;This is a test with a &lt;a href="http://www.emarsys.com"&gt;link&lt;/a&gt;&lt;/p&gt;

        ##FOOTER##

      &lt;/body&gt;
    &lt;/html&gt;
  </html>
  <conditional_contents>
    <conditional_content id="HEADER">
      <cases>
        <case><when>(LANGUAGE_v3 = "en") and (not(RCPT_TYPE_v3 in (1,2,3,4)))</when><html> &lt;h1&gt;Header 1&lt;/h1&gt; </html></case>
        <case><when>(LANGUAGE_v3 = "de") and (RCPT_TYPE_v3 in (1,2,3,4))</when><html> &lt;h1&gt;Header 2&lt;/h1&gt; </html></case>
      </cases>
      <otherwise><html> &lt;h1&gt;other Header&lt;/h1&gt; </html></otherwise>
    </conditional_content>
    <conditional_content id="FOOTER">
      <cases>
        <case><when>(LANGUAGE_v3 contains "n") and (RCPT_TYPE_v3 &lt; 1)</when><html> &lt;div&gt;footer1&lt;/div&gt; </html></case>
        <case><when>(LANGUAGE_v3 contains "d") and (RCPT_TYPE_v3 &gt; 1)</when><html> &lt;div&gt;footer2&lt;/div&gt; </html></case>
      </cases>
      <otherwise><html> &lt;div&gt;other footer&lt;/div&gt; </html></otherwise></conditional_content>
    <conditional_content id="SUBJECT">
      <cases>
        <case><when>(RCPT_TYPE_v3 equals 0)</when><text> subject 1 </text></case>
        <case><when>(RCPT_TYPE_v3 equals 4)</when><text> subject 2 </text></case>
      </cases>
      <otherwise><text> other subject </text></otherwise></conditional_content>
  </conditional_contents>
</transactional_mailing>
